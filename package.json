{
  "name": "acme-love",
  "version": "1.0.3",
  "description": "Lightweight strongly-typed ACME (RFC 8555) client & toolkit for Node.js 20+ (nonce pooling, CSR helpers, directory presets)",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "acme-love": "dist/src/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./directory": {
      "import": "./dist/directory.js",
      "types": "./dist/directory.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "docs"
  ],
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/src/cli.js",
    "start": "node dist/index.js",
    "dev": "nodemon --exec tsx src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "demo:acme": "node test-acme.js",
    "test": "ava",
    "test:e2e": "ava **/*.e2e.test.ts"
  },
  "keywords": [
    "acme",
    "letsencrypt",
    "certificate",
    "rfc8555",
    "tls",
    "x509",
    "typescript",
    "esm",
    "node"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebitrock/acme-love.git"
  },
  "bugs": {
    "url": "https://github.com/thebitrock/acme-love/issues"
  },
  "homepage": "https://github.com/thebitrock/acme-love#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@peculiar/asn1-schema": "^2.4.0",
    "@peculiar/asn1-x509": "^2.4.0",
    "@peculiar/webcrypto": "^1.5.0",
    "@peculiar/x509": "^1.13.0",
    "commander": "^14.0.0",
    "debug": "^4.4.1",
    "jose": "^6.0.13",
    "promise-coalesce": "^1.1.2",
    "undici": "^6.6.2"
  },
  "devDependencies": {
    "@inquirer/prompts": "^7.8.3",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/punycode": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "ava": "^6.4.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "inquirer": "^12.9.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  }
}
