{
  "name": "acme-love",
  "version": "1.0.0",
  "description": "Modern TypeScript Node.js project with ES modules support",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "acme-love": "dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./directory": {
      "import": "./dist/directory.js",
      "types": "./dist/directory.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec tsx src/index.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\" \"__tests__/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\" \"__tests__/**/*.{ts,js,json,md}\"",
    "lint": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config=jest.config.cjs",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --config=jest.config.cjs",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --config=jest.config.cjs",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPatterns=e2e --config=jest.config.cjs",
    "demo:errors": "node demo-errors.js",
    "demo:acme": "node test-acme.js"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "modern",
    "es-modules",
    "cli",
    "acme",
    "letsencrypt",
    "ssl",
    "certificates",
    "rfc8555"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/acme-love.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/acme-love/issues"
  },
  "homepage": "https://github.com/yourusername/acme-love#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "debug": "^4.4.1",
    "jose": "^6.0.13",
    "node-jose": "^2.2.0",
    "undici": "^6.6.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/node-jose": "^1.1.13",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.4.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  }
}
