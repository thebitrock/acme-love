{
  "name": "acme-love",
  "version": "1.7.1",
  "description": "🔐 Modern TypeScript ACME client & CLI for Let's Encrypt certificates. Supports DNS-01/HTTP-01 validation, wildcard domains, EAB (ZeroSSL/Google), nonce pooling. RFC 8555 compliant. Node.js 20+",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "acme-love": "dist/src/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./directory": {
      "import": "./dist/directory.js",
      "types": "./dist/directory.d.ts"
    }
  },
  "files": [
    "dist/src",
    "dist/index.js",
    "dist/index.d.ts",
    "dist/directory.js",
    "dist/directory.d.ts",
    "README.md",
    "NPM-README.md",
    "LICENSE",
    "SECURITY.md",
    "CONTRIBUTING.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc && node -e \"try{require('fs').chmodSync('dist/src/cli.js',0o755)}catch(e){process.stdout.write('chmod skipped\\n')}\"",
    "build:prod": "tsc -p tsconfig.prod.json && node -e \"try{require('fs').chmodSync('dist/src/cli.js',0o755)}catch(e){process.stdout.write('chmod skipped\\n')}\"",
    "postbuild": "node -e \"try{require('fs').chmodSync('dist/src/cli.js',0o755)}catch(e){process.stdout.write('chmod skipped\\n')}\"",
    "dev": "nodemon",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --testPathIgnorePatterns=stress/ --testPathIgnorePatterns=.*rate-limiting.* --testPathIgnorePatterns=e2e/",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --watch --testPathIgnorePatterns=stress/ --testPathIgnorePatterns=.*rate-limiting.* --testPathIgnorePatterns=e2e/",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --coverage --testPathIgnorePatterns=stress/ --testPathIgnorePatterns=.*rate-limiting.* --testPathIgnorePatterns=e2e/",
    "test:all": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:e2e": "cross-env NODE_OPTIONS=--experimental-vm-modules jest __tests__/e2e/",
    "test:e2e:ci": "cross-env ACME_E2E_ENABLED=1 NODE_OPTIONS=--experimental-vm-modules jest __tests__/e2e/",
    "test:e2e:rate-limit": "cross-env DEBUG=acme-love:* NODE_OPTIONS=--experimental-vm-modules jest __tests__/e2e/rate-limit.test.ts --testTimeout=120000",
    "test:e2e:acme": "cross-env NODE_OPTIONS=--experimental-vm-modules jest __tests__/e2e/acme-integration.test.ts --testTimeout=60000",
    "test:nonce-manager": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand __tests__/nonce-manager.test.ts",
    "test:deadlock": "cross-env NODE_OPTIONS=--experimental-vm-modules jest __tests__/stress/deadlock-detection.test.ts --testTimeout=120000 --forceExit",
    "test:quick": "cross-env DEBUG=acme-love:* NODE_OPTIONS=--experimental-vm-modules jest __tests__/stress/quick-stress.test.ts --testTimeout=30000",
    "test:standard": "cross-env DEBUG=acme-love:* ACME_LIGHT_STRESS_ENABLED=1 NODE_OPTIONS=--experimental-vm-modules jest __tests__/stress/standard-stress.test.ts --testTimeout=45000",
    "test:heavy": "cross-env ACME_HEAVY_STRESS_ENABLED=1 NODE_OPTIONS=--experimental-vm-modules jest __tests__/stress/heavy-stress.test.ts --testTimeout=60000",
    "test:rate-limiting": "cross-env NODE_OPTIONS=--experimental-vm-modules jest __tests__/rate-limiting.test.ts --testTimeout=60000",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules jest __tests__/unit/",
    "test:deadlock:all": "npm run test:deadlock",
    "accounts": "cross-env NODE_OPTIONS=--experimental-vm-modules node dist/__tests__/utils/account-manager-cli.js",
    "clean": "node -e \"try{require('fs').rmSync('dist',{recursive:true,force:true})}catch(e){}\"",
    "prepublishOnly": "npm run format:check && npm run lint:check && npm run clean && npm run build:prod && npm test",
    "release": "node -e \"console.error('Use GitHub Release (CI) workflow instead'); process.exit(1)\"",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:format": "eslint . --fix && prettier --write .",
    "seo:check": "node scripts/check-seo.mjs",
    "toc": "node scripts/generate-toc.mjs",
    "toc:check": "node scripts/generate-toc.mjs --check",
    "pack:dry": "npm run clean && npm run build:prod && npm pack --dry-run",
    "package:analyze": "npm run seo:check && npm run pack:dry",
    "cli": "npm run build && node dist/src/cli.js",
    "cli:help": "npm run build && node dist/src/cli.js --help",
    "cli:interactive": "npm run build && node dist/src/cli.js interactive",
    "cli:cert": "npm run build && node dist/src/cli.js cert",
    "cli:staging": "npm run build && node dist/src/cli.js interactive --staging",
    "cli:production": "npm run build && node dist/src/cli.js interactive --production"
  },
  "keywords": [
    "acme",
    "acme-client",
    "letsencrypt",
    "ssl",
    "tls",
    "certificate",
    "x509",
    "cli",
    "typescript",
    "esm",
    "node",
    "rfc8555",
    "acmev2",
    "boulder",
    "zerossl",
    "google-trust",
    "buypass",
    "dns-01",
    "http-01",
    "wildcard",
    "eab",
    "external-account-binding",
    "nonce-pooling",
    "csr",
    "certificate-authority",
    "tls-certificate",
    "ssl-certificate",
    "automated-certificate",
    "certificate-management",
    "crypto",
    "webcrypto",
    "ecdsa",
    "rsa",
    "p256",
    "security",
    "encryption",
    "devops",
    "automation",
    "infrastructure",
    "jose",
    "jwk",
    "jws",
    "undici"
  ],
  "author": {
    "name": "Roman Pohorilchuk",
    "email": "roman@pohorilchuk.com",
    "url": "https://github.com/thebitrock"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thebitrock/acme-love.git",
    "directory": "."
  },
  "bugs": {
    "url": "https://github.com/thebitrock/acme-love/issues",
    "email": "roman@pohorilchuk.com"
  },
  "homepage": "https://github.com/thebitrock/acme-love#readme",
  "engines": {
    "node": ">=20.18.1",
    "npm": ">=10.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "@inquirer/prompts": "^7.8.4",
    "@peculiar/asn1-schema": "^2.4.0",
    "@peculiar/asn1-x509": "^2.4.0",
    "@peculiar/webcrypto": "^1.5.0",
    "@peculiar/x509": "^1.13.0",
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "debug": "^4.4.1",
    "jose": "^6.1.0",
    "ora": "^8.2.0",
    "undici": "^7.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@jest/globals": "^30.1.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.5",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/debug": "^4.1.12",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/punycode": "^2.1.4",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "babel-jest": "^30.1.2",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true,
    "tag": "latest"
  },
  "directories": {
    "doc": "./docs",
    "test": "./__tests__",
    "lib": "./dist"
  },
  "preferGlobal": false,
  "config": {
    "unsafe-perm": true
  }
}
